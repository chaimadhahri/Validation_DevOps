pipeline {
    agent any

    stages {
        stage('GIT') {
            steps {
		echo "Getting Project from Git"
                git 'https://github.com/chaimadhahri/Validation_DevOps.git'
            }
        }
        stage('Maven clean') {
            steps {
                sh 'mvn clean'
            }
        }
	 stage('Maven compile') {
            steps {
                sh 'mvn compile'
            }
        }
	stage('Mockito') {
            steps {
		sh 'mvn clean test -Dtest=tn.esprit.spring.serviceTest.CourseServiceMockTest'
              
            }
        }
	stage('Maven sonar:sonar') {
            steps {
                sh 'mvn sonar:sonar  -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }

    }
}