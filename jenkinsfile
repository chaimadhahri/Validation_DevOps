pipeline {
    agent any
    stages {
        stage('GIT') {
            steps {
		echo "Getting Project from Git"
                git url: 'https://github.com/chaimadhahri/Validation_DevOps.git', branch: 'oumaima'
            }
        }
          stage('Maven clean') {
            steps {
                sh 'mvn clean'
            }
        }
	 stage('Maven compile') {
            steps {
                sh 'mvn compile'
            }
        }
     stage('Tests') {
            steps {
		sh 'mvn test'
              
            }
        }
     stage('Maven sonar:sonar') {
            steps {
                sh 'mvn sonar:sonar  -Dsonar.login=admin -Dsonar.password=mimo'
            }
        }
      
     stage('NEXUS'){
            steps{
                sh "mvn deploy -DskipTests=true"
            }
        }
       
      stage('Build Docker Image') {
                steps {
                    echo 'Building the Docker image...'
                    sh 'docker build -t karmandi/skiouma:1.0.0 .'


                }
            }

            stage('Upload to Docker Hub') {
                steps {
                    echo 'Logging in to Docker Hub with a token...'
                    sh 'echo dckr_pat_dsg8x3JHiv58CW_eKGa3hoB7dMw | docker login -u karmandi --password-stdin'

                    echo 'Pushing the Docker image to Docker Hub...'
                    sh 'docker push karmandi/skiouma:1.0.0'
                }
            }



            stage('Run Docker Compose') {
                steps {
                    echo 'Running Docker Compose...'
                    sh 'docker-compose up -d'
                }
            }



            }


    }

